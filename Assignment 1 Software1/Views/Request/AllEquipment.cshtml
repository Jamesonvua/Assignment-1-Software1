@model IEnumerable<Assignment1EnterpriseSoftware.Models.Equipment>

<h2>All IT Equipment</h2>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Type</th>
            <th>Description</th>
            <th>Available</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipment in Model)
        {
            <tr class="@(equipment.IsAvailable ? "table-success" : "table-danger")">
                <td>@equipment.EquipmentType.ToString()</td>
                <td>@equipment.Description</td>
                <td>@(equipment.IsAvailable ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>
